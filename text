// 5.wap to read a number and check wheather it is prime or not.


#include <stdio.h>
int main() {
  int n, i,s = 0;
  printf("Enter a positive integer: ");
  scanf("%d", &n);

  for (i = 2; i <= n / 2; ++i) {
    // condition for non-prime
    if (n % i == 0) {
      s = 1;
      break;
    }
  }

  if (n == 1) {
    printf("1 is neither prime nor composite.");
  } 
  else {
    if (s == 0)
      printf("%d is a prime number.", n);
    else
      printf("%d is not a prime number.", n);
  }

  return 0;
}

//6.wap to print all the prime numbers between 2 to 500.


#include <stdio.h> 
int main() 
{ 
 int i,a,count; 
 printf("Prime numbers between 2 and 500 are : \n"); 
 for (i=2;i<500;i++) 
 { 
	 count=0; 
		 for (a=1;a<=i;a++) 
		 { 
 			if (i%a==0) 
 				count++; 
 		 } 
	 if (count==2) 
		 printf("%d\t",i); 
 } 
 return 0; 
} 

// 7. wap to display all the 3 armstrong numbers between 100 to 500.

#include<stdio.h>
void main(){
  int  d1,d2,d3,n,sum=0;
  int i;
  for(i=100;i<=500;i++)
  {

    n=i;
    d1=n%10;
    n=n/10;
    d2=n%10;
    d3=n/10;
    sum=(d1*d1*d1)+(d2*d2*d2)+(d3*d3*d3);
    if(sum==1){
      printf("%d\n",i);
    }
  }
  getch();
}


// 8.wap to display fibonacci series upto n terms.

#include <stdio.h>

int main()
{
    int a, b, c, i, terms;

    
    printf("Enter number of terms: ");
    scanf("%d", &terms);

    
    a = 0;
    b = 1;
    c = 0;

    printf("Fibonacci terms: \n");

    
    for(i=1; i<=terms; i++)
    {
        printf("%d, ", c);

        a = b;     
        b = c;     
        c = a + b; 
    }

    return 0;
}

// 9. wap to display multiplication table of 5 from 1 to 10.

#include<stdio.h>
int main(){
  int dis=0,i;
  for(i=1;i<=10;i++){
    print("5*%d=%d\n",i,dis+=5);
  }
  return 0;
} 

//or for any integar multiplication



int main() {
    int n, i;
    printf("Enter an integer: ");
    scanf("%d", &n);
    for (i = 1; i <= 10; ++i) {
        printf("%d * %d = %d \n", n, i, n * i);
    }
    return 0;
}




// 10. wap to display all characters and ascii values whose ascii values ranges from 1 to 255.


#include <stdio.h>
int main() {  

    printf("Enter a character: ");
    scanf("%c", &c);  
    
    for(c=1;c<=255;++c){
    printf("ASCII value of %c = %d", c, c);}
    
    return 0;
}


//11.wap to read n different numbers and display the sum

#include <stdio.h>
void main()
{
   int i,n,sum=0;
   printf("Input Value of terms : ");
   scanf("%d",&n);
   printf("\nThe  %d  numbers are:\n",n);
   for(i=1;i<=n;i++)
   {
     printf("%d ",i);
     sum+=i;
   }
   printf("\nThe Sum of  numbers upto %d terms : %d \n",n,sum);

}

//12. wap to read a number and calculate its factorial.


#include <stdio.h>
int main() {
    int n, i;
     fact = 1;
    printf("Enter an integer: ");
    scanf("%d", &n);

    
    if (n < 0)
        printf("Error! Factorial of a negative number doesn't exist.");
    else {
        for (i = 1; i <= n; ++i) {
            fact *= i;
        }
        printf("Factorial of %d = %llu", n, fact);
    }

    return 0;
}

// 13. two numbers are entered through the keyboard.wap to find value of one  number raised power of another.


#include<stdio.h>
int main(){
  int a,b,i,ans=1;
  print("enter the number ");
  scanf("%d %d",&a,&b);
  for(i=1;i<=b;i++)
  {
    ans=ans*a;
  }
  printf("%d raised to %d is %d",a,b,ans);
  return 0;
}


